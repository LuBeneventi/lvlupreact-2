{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "types": ["node"],
    
    /* Configuración de Módulos */
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    /* Strictness */
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}